{
    "mcp": {
        "inputs": [
            {
                "type": "promptString",
                "id": "spotify_client_id",
                "description": "Spotify Client ID",
                "password": true
            },
            {
                "type": "promptString",
                "id": "spotify_client_secret",
                "description": "Spotify Client Secret",
                "password": true
            },
            {
                "type": "promptString",
                "id": "spotify_redirect_uri",
                "description": "Spotify Redirect URI"
            }
        ],
        "servers": {
            "spotify-mcp": {
                "command": "uv",
                "args": [
                    "--directory",
                    "D:\\repos\\tour-of-heroes-nextjs\\spotify-mcp",
                    "run",
                    "spotify-mcp"
                ],
                "env": {
                    "SPOTIFY_CLIENT_ID": "${input:spotify_client_id}",
                    "SPOTIFY_CLIENT_SECRET": "${input:spotify_client_secret}",
                    "SPOTIFY_REDIRECT_URI": "${input:spotify_redirect_uri}"
                }
            }
        }
    },
    "github.copilot.chat.codeGeneration.instructions": [
        {
            "text": "Always add a comment: 'Generated by Copilot'."
        },
        {
            "text": "In TypeScript always use underscore for private field names."
        },
        {
            "file": "general.instructions.md" // import instructions from file `general.instructions.md`
        },
        {
            "file": "db.instructions.md" // import instructions from file `db.instructions.md`
        }
    ],
}